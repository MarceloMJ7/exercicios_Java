package desafio_4;

import java.util.Arrays;
import java.util.Random;

import javax.swing.JOptionPane;

/*
Faça um programa que leia 5 números inteiros digitados pelo usuário e armazene-os
em um vetor. Em seguida, o programa deve ordenar os números em ordem
crescente e imprimir o vetor ordenado
 */
public class Desafio_4 {

	public static void main(String[] args) {
		int[] numeroUser = numerosUser();
		Arrays.sort(numeroUser);

		String numerosOrdenados = formatArray(numeroUser);

		System.out.println(numerosOrdenados);
	}

	public static int[] numerosUser() {
		Random random = new Random();
		int[] numerosUser = new int[5];
		 int count = 0;

	        while (count < 5) {
	            int randomInt = random.nextInt(20); // Gera um número aleatório entre 0 e 19

	            // Verifica se o número gerado já está presente no array
	            if (!contains(numerosUser, randomInt, count)) {
	                numerosUser[count] = randomInt; // Adiciona o número ao array
	                count++; // Incrementa o contador de números únicos
	            }
	        }

	        return numerosUser;
	    }
	
	 public static boolean contains(int[] array, int value, int count) {
	        for (int i = 0; i < count; i++) {
	            if (array[i] == value) {
	                return true; // O número já está presente
	            }
	        }
	        return false; // O número não está presente
	    }

	public static String formatArray(int[] numeroUser) {// // Função para formatar o array como uma string sem chaves e
		// vírgulas
		StringBuilder sb = new StringBuilder();
		for (int i = 0; i < numeroUser.length; i++) {
			sb.append(numeroUser[i]);
			if (i < numeroUser.length - 1) {
				sb.append(" "); // Adiciona um espaço entre os números
			}
		}
		return sb.toString();
	}

}
