package desafio_3;
import java.util.Random;

import javax.swing.JOptionPane;

/*
 Uma turma do curso de programação da escola X é formada por 30 alunos. Faça um
programa que leia as notas de cada aluno em uma avaliação e armazene-as em um
vetor. O programa deve calcular e imprimir a média da turma e a quantidade de
alunos que ficaram acima da média.

 */

public class Desafio_3 {

	public static void main(String[] args) {
		double [] notas = notas();
		
		String numerosFormatados = formatArray(notas);

	}

	public static double [] notas() {
		Random random = new Random();
		double [] notasAlunos = new double [30];
		
		for(int i = 0; i < 30; i++) {
			int randomInt = random.nextInt(11);
			notasAlunos[i] = randomInt;
		}
		
		return notasAlunos;
	}
	
	// Método para formatar o array como uma string sem chaves e vírgulas
		public static String formatArray(double[] notas) {
			StringBuilder sb = new StringBuilder();
			for (int i = 0; i < notas.length; i++) {
				sb.append(notas[i]);
				if (i < notas.length - 1) {
					sb.append(" "); // Adiciona um espaço entre os números
				}
			}
			return sb.toString();
		}
	
}
