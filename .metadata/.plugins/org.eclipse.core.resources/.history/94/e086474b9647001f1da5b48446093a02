package desafio_3;

import java.text.Format;
import java.util.Random;

import javax.swing.JOptionPane;

/*
 Uma turma do curso de programação da escola X é formada por 30 alunos. Faça um
programa que leia as notas de cada aluno em uma avaliação e armazene-as em um
vetor. O programa deve calcular e imprimir a média da turma e a quantidade de
alunos que ficaram acima da média .

 */

public class Desafio_3 {

	public static void main(String[] args) {
		double[] notas = notas();
		double mediaNotas = mediaAlunos(notas), notaCorte = 6.0;
		int alunosAcimaMedia = 0, alunosBaixo = 0;

		for(int i = 0; i < 30; i++) {
			if(notas[i] > notaCorte) {
				alunosAcimaMedia++;
			}else {
				alunosBaixo++;
			}
		}
	
	String numerosFormatados = formatArray(notas);
	System.out.println(numerosFormatados);
	JOptionPane.showMessageDialog(null, String.format("Media Classe: %.1f\n", mediaNotas) + "Alunos acima média: " + alunosAcimaMedia + " Alunos \n" + "alunosBaixo: " + alunosBaixo);
	}

	public static double[] notas() { // função que recebe números aleatórios que seriam as notas dos alunos;
		Random random = new Random();
		double[] notasAlunos = new double[30];

		for (int i = 0; i < 30; i++) {
			int randomInt = random.nextInt(11);
			notasAlunos[i] = randomInt;
		}

		return notasAlunos;
	}
	
	public static double mediaAlunos(double [] notas) {
		double somaNotas = 0;
		
		for(int i = 0; i < 30; i++) {
			somaNotas += notas[i];
		}
		
		return somaNotas/30;
	}
	

	public static String formatArray(double[] notas) {// // Função para formatar o array como uma string sem chaves e
														// vírgulas
		StringBuilder sb = new StringBuilder();
		for (int i = 0; i < notas.length; i++) {
			sb.append(notas[i]);
			if (i < notas.length - 1) {
				sb.append(" "); // Adiciona um espaço entre os números
			}
		}
		return sb.toString();
	}

}
